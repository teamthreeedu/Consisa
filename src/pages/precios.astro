  <!-- Servicios adicionales -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-slate-800 mb-4">
          Servicios Adicionales
        </h2>
        <p class="text-xl text-slate-600">
          Complementa tu plan con servicios especializados
        </p>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div
          class="text-center p-6 bg-slate-50 rounded-2xl border border-slate-200 hover:border-blue-300 transition-colors"
        >
          <div
            class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center mx-auto mb-4"
